{% extends 'layoutShop.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block content %}
  <div class="container">
    <article class="col-md-8 maincontent">
      {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
      {% endfor %}
      <header class="page-header">
        <h1>Réinitialisation du mot de passe</h1>
      </header><br>

      {{ form_start(requestForm) }}
      <div class="mb-3">
        {{ form_row(requestForm.email, {
          'attr': {
            'class': 'form-control',
            'placeholder': 'Votre adresse e-mail'
          }
        }) }}
      </div>
      <div class="mb-3">
        <small>Entrez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.</small>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Envoyer l'e-mail de réinitialisation du mot de passe</button>
      </div>
      {{ form_end(requestForm) }}
    </article>
  </div>
{% endblock %}
