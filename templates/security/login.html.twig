{% extends 'layoutShop.html.twig' %}

{% block title %}Connexion !{% endblock %}

{% block content %}
<div class="container " style="display: flex; flex-direction: column; min-height: 50vh;">
    <article class="col-md-8 maincontent" style="flex: 1;">
        <header class="page-header">
            <h1>Connexion</h1>
        </header><br>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="mb-3">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword"
                class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-3">
                <button class="btn btn-secondary" type="submit">Connexion</button>
            </div>
        </form>

        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
    </article>
</div>
{% endblock %}
